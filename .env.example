# Application Settings
APP_NAME=optimum-cli-pro
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
DATABASE_PATH=./data/registry.db

# Storage
STORAGE_TYPE=local  # local or s3
STORAGE_PATH=./data/models
S3_BUCKET=
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# MLOps Integration
MLFLOW_ENABLED=false
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=model-optimization

WANDB_ENABLED=false
WANDB_PROJECT=optimum-cli-pro
WANDB_ENTITY=
WANDB_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/app.log

# Cost Tracking
ENABLE_COST_TRACKING=true
AWS_COST_PER_HOUR=0.0116  # t2.micro hourly rate

# Hardware Detection
AUTO_DETECT_HARDWARE=true
